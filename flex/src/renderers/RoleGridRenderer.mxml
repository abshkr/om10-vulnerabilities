<?xml version="1.0" encoding="utf-8"?>
<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark" 
								  xmlns:mx="library://ns.adobe.com/flex/mx" 
								  focusEnabled="true">
	<fx:Script>
		<![CDATA[
			import mx.controls.dataGridClasses.DataGridListData;
			import mx.events.FlexEvent;
			
			protected function cb_changeHandler(event:Event):void
			{
				data[(listData as DataGridListData).dataField] = cb.selected;
				var id:int = data[(listData as DataGridListData).rowIndex];
				dispatchEvent(new TextEvent('privilegeChanged',true,false,String(id)));
			}
			
		]]>
	</fx:Script>
	<s:CheckBox id="cb" selected="{listData.label == 'true' ? true : false}" width="100%" height="100%"
				change="cb_changeHandler(event)" skinClass="skins.CheckSkin"/>
</s:MXAdvancedDataGridItemRenderer>
