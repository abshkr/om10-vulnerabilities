					if ( global.setComboBoxNoSelection == true )
					{
						fltr_partner_type.selectedIndex = -1;
					}
					fields["partner_type"] = "";
				}
				types["partner_type"] = "EXACT_STRING";
				
				if(fltr_partner_code.text!='')
				{					
					fields["partner_code"] = fltr_partner_code.text;
				}
				else
				{
					fields["partner_code"] = "";
				}
				types["partner_code"] = "STRING";
				
				if(fltr_partner_name.text!='')
				{					
					var encodedTxt:String = fltr_partner_name.text;
					fields["partner_name1||partner_name2||partner_name3||partner_name4||partner_name5"] = encodedTxt+"||"+encodedTxt+"||"+encodedTxt+"||"+encodedTxt+"||"+encodedTxt;
				}
				else
