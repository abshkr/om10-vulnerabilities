				fields = new Object();
				types = new Object();
				
				if (fltr_company.selectedIndex > -1) 
				{
					fields["partner_cmpy_code"] = partnerCompanyList[fltr_company.selectedIndex].cmpy_code;
				}
				else
				{
					if ( global.setComboBoxNoSelection == true )
					{
						fltr_company.selectedIndex = -1;
					}
					fields["partner_cmpy_code"] = "";
				}
				types["partner_cmpy_code"] = "EXACT_STRING";
				
				if (fltr_partner_type.selectedIndex > -1) 
				{
					fields["partner_type"] = partnerTypeList[fltr_partner_type.selectedIndex].partner_type_code;
				}
				else
