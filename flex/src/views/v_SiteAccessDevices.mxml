				}
				else
				{
					if ( global.setComboBoxNoSelection == true )
					{
						fltr_adv_device.selectedIndex = -1;
					}
					fields["adv_device"] = "";
				}
				types["adv_device"] = "EXACT_STRING";
				
				if(fltr_adv_code.text!='')
				{					
					fields["adv_code"] = fltr_adv_code.text;
				}
				else
				{
					fields["adv_code"] = "";
				}
				types["adv_code"] = "STRING";
				
				if (fltr_adv_area.selectedIndex > -1) 
				{
					fields["adv_area"] = areaList[fltr_adv_area.selectedIndex].area_k;
				}
				else
				{
					if ( global.setComboBoxNoSelection == true )
					{
						fltr_adv_area.selectedIndex = -1;
					}
					fields["adv_area"] = "";
				}
				types["adv_area"] = "EXACT_STRING";
				
				currentFields = fields;
				currentTypes = types;
				
				this.startLoadingPages();
				
				trace("this.grid.scroller3333", this.dataGrid.scroller);
				trace("this.grid.scroller.verticalScrollBar.value", this.dataGrid.scroller.verticalScrollBar.value);
