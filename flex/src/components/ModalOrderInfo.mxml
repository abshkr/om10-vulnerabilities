<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="components.*"
		 width="700" height="400" skinClass="skins.DialogBoxSkin" title="Order {orderId} Details">
	
	<fx:Script>
		<![CDATA[
			import events.ObjEvent;
			
			import mx.collections.ArrayCollection;
			import mx.core.FlexGlobals;
			import mx.managers.PopUpManager;
			
			[Bindable]public var obj:Object = new Object();
			[Bindable]public var orderId:String = '';
			
			protected function closeWindow(event:MouseEvent):void
			{
				PopUpManager.removePopUp(this);
			}			
			
		]]>
	</fx:Script>	
	
	<s:VGroup top="10" left="10" right="10" height="100%" width="100%" gap="5">
		<components:DKI_DataGrid dataProvider="{obj as ArrayCollection}" width="100%" height="100%">
			<components:columns>
				<s:ArrayList>
					<s:GridColumn dataField="prod_name" headerText="Product Name" width="120"></s:GridColumn>					
					<s:GridColumn dataField="order_prod_qty" headerText="Quantity"></s:GridColumn>
					<s:GridColumn dataField="oprod_scheduled" headerText="Scheduled"></s:GridColumn>
					<s:GridColumn dataField="oprod_loaded" headerText="Loaded"></s:GridColumn>
					<s:GridColumn dataField="available" headerText="Available"></s:GridColumn>
					<s:GridColumn dataField="unit_desc" headerText="Unit"></s:GridColumn>
				</s:ArrayList>
			</components:columns>
		</components:DKI_DataGrid>
		<s:HGroup width="100%">
			<s:Spacer width="100%" />
			<components:DKI_Button label="Close" click="closeWindow(event)"/>
		</s:HGroup>
		<s:Spacer height="2" />
	</s:VGroup>	
</s:Panel>
