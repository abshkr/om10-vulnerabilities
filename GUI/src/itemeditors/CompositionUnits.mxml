<?xml version="1.0" encoding="utf-8"?>
<s:GridItemEditor xmlns:fx="http://ns.adobe.com/mxml/2009" 
				  xmlns:s="library://ns.adobe.com/flex/spark" 
				  xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Script>
		<![CDATA[
			import spark.events.IndexChangeEvent;
			
			override public function set value(newValue:Object):void 
			{
				trace(newValue);
				ddl.selectedIndex=0;
				for(var i:int=0;i <global.loadUnits.length;i++)
				{
					if (global.loadUnits[i].unit_id == newValue)
					{
						ddl.selectedIndex = i;
						//ddl.labelDisplay.text = global.loadUnits[i].description;
					}
				}
			}
			
			override public function get value():Object 
			{
				if (ddl.selectedIndex > -1)
					return global.loadUnits[ddl.selectedIndex].unit_id
				else
					return 5;
			}
			
			override public function setFocus():void 
			{
				ddl.setFocus();
			}
			
		]]>
	</fx:Script>
	<s:ComboBox dataProvider="{global.loadUnits}" labelField="description" id="ddl" top="2" left="2" bottom="2" right="2" requireSelection="true"/>
</s:GridItemEditor>