<?xml version="1.0" encoding="utf-8"?>
<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark" 
								  xmlns:mx="library://ns.adobe.com/flex/mx" 
								  focusEnabled="true">
	<fx:Script>
		<![CDATA[
			import mx.controls.dataGridClasses.DataGridListData;
			import mx.events.FlexEvent;

			protected function cb_changeHandler(event:Event):void
			{
				data[(listData as DataGridListData).dataField] = cb.selected;
				if (data.needsCGI==true)
				{
					switch(listData.columnIndex)
					{
						case 1: 
							if(!cb.selected)
							{
								data.priv_update = false;
								data.priv_create = false;
								data.priv_delete = false;
							}
							break;
						case 2: 
							if(!cb.selected)
							{
								data.priv_create = false;
								data.priv_delete = false;
							}
							break;
						case 3: 
							if(!cb.selected)
							{
								data.priv_delete = false;
							}
							else
							{
								data.priv_view = true;
								data.priv_update = true;
							}
							break;
						case 4:
							if(cb.selected)
							{
								data.priv_view = true;
								data.priv_update = true;
								data.priv_create = true;
							}
							break;
					}
				}
				var id:int = listData.rowIndex;
				dispatchEvent(new TextEvent('privilegeChanged',true,false,String(id)));
			}
		]]>
	</fx:Script>
	<s:CheckBox id="cb" selected="{listData.label == 'true' ? true : false}" width="100%" height="100%"
				change="cb_changeHandler(event)" skinClass="skins.RoleCheckSkin"/>
</s:MXAdvancedDataGridItemRenderer>
