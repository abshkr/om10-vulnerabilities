<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="components.*"
		 width="180" height="124" skinClass="skins.DialogBoxSkin" title="Is it a combination?">
	
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.managers.PopUpManager;
			
			public var callback:Function;
			
			protected function dki_button1_clickHandler(event:MouseEvent):void
			{
				if(combination.selectedValue=='0')
					callback("createComplex") else callback("createRigid");
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:RadioButtonGroup id="combination"/>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup top="20" width="110" fontWeight="bold" horizontalCenter="0">
		<s:RadioButton label="{resourceManager.getString('default','YES')}" groupName="combination" value="0" selected="false" click="dki_button1_clickHandler(event)"/>
		<s:Spacer width="20" />
		<s:RadioButton label="{resourceManager.getString('default','NO')}" groupName="combination" value="1" selected="false" click="dki_button1_clickHandler(event)"/>
	</s:HGroup>
		<components:DKI_Button bottom="8" horizontalCenter="0" label="{resourceManager.getString('default','CANCEL')}" click="PopUpManager.removePopUp(this)" type="cancel"/>
</s:Panel>
