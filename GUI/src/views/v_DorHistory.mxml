			private function editRecord():void
			{
				
				if ( this.checkFields() > 0 )
				{
					this.btn_save.enabled = this.canUpdate;
					return;
				}
				
				var obj:Object = new Object();
				
				if (dh_dor_type.selectedIndex>=0)
				{
					obj.dh_dor_type = dorTypeList[dh_dor_type.selectedIndex].dor_type_code;
				}
				else
				{
					obj.dh_dor_type = dataGrid.selectedItem.dh_dor_type;
				}
				
				obj.dh_dor_number = obj.dh_dor_type + String(dh_dor_number.text);
				
				obj.dh_trip_no = dh_trip_no.text;
				obj.dh_supp_code = dh_supp_code.text;
				obj.dh_cmpt_no = dh_cmpt_no.text;
				
				updateAction.service( obj );
			}
			
