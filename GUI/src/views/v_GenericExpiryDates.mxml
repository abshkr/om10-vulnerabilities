			private function startFiltering():void
			{
				var fields:Object;
				var types:Object;
				
				//interruptor=false;
				pagedRecords.interruptor=false;
				
				fields = new Object();
				types = new Object();
				
				if(fltr_keyword.text!='')
				{					
					fields["expiry_date_type_code||expiry_date_type_desc"] = fltr_keyword.text+"||"+fltr_keyword.text;
				}
				else
				{
					fields["expiry_date_type_code||expiry_date_type_desc"] = "";
				}
				types["expiry_date_type_code||expiry_date_type_desc"] = "STRING||STRING";
				
				if ( this.isTargetEditable == false && this.currentExpiryTargetCode!='' )
				{					
					fields["expiry_date_target_code"] = this.currentExpiryTargetCode;
					types["expiry_date_target_code"] = "EXACT_STRING";
				}
				else
				{
					if (fltr_target.selectedIndex > -1) 
					{
						fields["expiry_date_target_code"] = this.expiryDateTargetList[fltr_target.selectedIndex].edta_target_code;
					}
					else
					{
						if ( global.setComboBoxNoSelection == true )
						{
							fltr_target.selectedIndex = -1;
						}
						fields["expiry_date_target_code"] = "";
					}
					types["expiry_date_target_code"] = "EXACT_STRING";
				}
				this.expiryDateTypeCounter.service( fields["expiry_date_target_code"] );
				
				
				currentFields = fields;
				currentTypes = types;
				
				this.startLoadingPages();
				
				trace("this.grid.scroller3333", this.dataGrid.scroller);
				trace("this.grid.scroller.verticalScrollBar.value", this.dataGrid.scroller.verticalScrollBar.value);
			}
			
