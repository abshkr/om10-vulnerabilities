				objO.expiry_date_type_code = dataGrid.selectedItem.expiry_date_type_code;
				objO.expiry_date_type_desc = dataGrid.selectedItem.expiry_date_type_desc;
				objO.expiry_date_type_status = dataGrid.selectedItem.expiry_date_type_status;
				objO.expiry_date_type_reject = dataGrid.selectedItem.expiry_date_type_reject;
