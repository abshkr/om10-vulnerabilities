				var value:String = global.getValueFromSiteConfigSettings( "SITE_DEFAULT_TNKR_EXPIRY" );
				
				if ( value == null )
				{
					value = "";
				}
				value = StringUtil.trim( value );
				
				var now_date:Date;
				var def_date:Date;
				
				if ( value.length > 0 && tools.isValueInteger(value)==false )
				{
					var tmval:String = global.getValueFromSiteConfigSettings( "SITE_DEFAULT_TIME_STRING" );
					if ( tmval.length > 0 && tools.isValueInteger(tmval)==false )
					{
						def_date = this.convertDateToLocaleLong( value + ' ' + tmval );
					}
					else
					{
						def_date = DateField.stringToDate( value,"YYYY-MM-DD" );
					}
				}
				else
				{
					if ( value.length == 0 )
					{
						value = "-1";
					}
					now_date = new Date();
					def_date = DateTimeFunc.dateAdd( "d", int(value), now_date );
				}
				
				/* if ( value.length > 0 && value != "-1" )
				{
				def_date = DateField.stringToDate( value,"YYYY-MM-DD" );
				}
				else
				{
				now_date = new Date();
				def_date = DateTimeFunc.dateAdd( "d", -1, now_date );
				} */
				
				return def_date;
			}
			
