			<!--mx:ProgressBar id="pb" width="100%" height="22" visible="false" includeInLayout="false"  mode="manual" source="{this.pgList}" label="{this.currentLength} records shown from {this.currentLength} loaded out of {this.totalLength} found." labelPlacement="center"/-->
			<s:Button id="killBtn" width="18" height="18" label="" cornerRadius="12" visible="false" includeInLayout="false"
					  click="killBtn_clickHandler(event)"/>
			<s:Button id="resumeBtn" width="18" height="18" label="" cornerRadius="12" visible="false" includeInLayout="false"
					  click="resumeBtn_clickHandler(event)"/>
		</s:HGroup>
	</s:Panel>
	
	<s:Panel id="details" includeIn="edit,create,detail" width="100%" height="200"
			 itemCreationPolicy="immediate" skinClass="skins.WidgetPanelSkin">
		<s:layout>
			<s:VerticalLayout/>
			<!--s:TileLayout/-->
		</s:layout>
		
		<s:Spacer height="5"/>
		<s:VGroup>
			<s:HGroup>
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="{resourceManager.getString('default','EXPIRY_DATE_TARGET')}" verticalAlign="middle"/>
					<components:DKI_ValidatorComboBox id="expiry_date_target_code" 
													  dataProvider="{expiryDateTargetList}" 
													  labelField="edta_target_desc" 
													  selectedItem="" enabled="false" 
													  selectedItem.create="" selectedIndex.create="-1" enabled.create="{this.isTargetEditable}" 
													  width="{fieldWidth}" height="{fieldHeight}" 
													  prompt="{resourceManager.getString('default','SELECT')+resourceManager.getString('default','EXPIRY_DATE_TARGET')}"
													  required="true" validationGroup="{vg}" automationName="{resourceManager.getString('default','EXPIRY_DATE_TARGET')}" 
													  />
				</s:HGroup>
				
				<s:Spacer width="{spaceWidth}" />
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="{resourceManager.getString('default','EXPIRY_DATE_TYPE_CODE')}" verticalAlign="middle"/>
					<components:DKI_ValidatorInput id="expiry_date_type_code" maxChars="32" 
												   width="{fieldWidth}" height="{fieldHeight}" 
												   text="{dataGrid.selectedItem.expiry_date_type_code}" editable="false" enabled="false" 
												   text.create="" editable.create="true" enabled.create="true" focusOut="checkExpiryDateType()" 
												   required="true" validationType="alphanumeric" validationGroup="{vg}" automationName="{resourceManager.getString('default','EXPIRY_DATE_TYPE_CODE')}" 
												   />
				</s:HGroup>
				
				<s:Spacer width="{spaceWidth}" />
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="{resourceManager.getString('default','EXPIRY_DATE_TYPE_DESC')}" verticalAlign="middle"/>
					<components:DKI_ValidatorInput id="expiry_date_type_desc" maxChars="80" 
												   width="{fieldWidth}" height="{fieldHeight}" 
												   text="{dataGrid.selectedItem.expiry_date_type_desc}" editable="false" enabled="false" editable.edit="true" enabled.edit="true"  
												   text.create="" editable.create="true" enabled.create="true" 
												   required="true" validationType="document" validationGroup="{vg}" automationName="{resourceManager.getString('default','EXPIRY_DATE_TYPE_DESC')}" 
												   />
				</s:HGroup>
				
			</s:HGroup>
			
			<s:Spacer height="{this.spaceHeight}" />
			
			<s:HGroup>
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="" verticalAlign="middle"/>
					<s:CheckBox id="expiry_date_type_default" label="{resourceManager.getString('default','EXPIRY_DATE_TYPE_DEFAULT')}" width="{fieldWidth}" 
								selected="false" selected.edit="{dataGrid.selectedItem.expiry_date_type_default==1?true:false}" visible="true" enabled="false" enabled.edit="false" enabled.create="false" />
				</s:HGroup>
				
				<s:Spacer width="{spaceWidth}" />
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="" verticalAlign="middle"/>
					<s:CheckBox id="expiry_date_type_status" label="{resourceManager.getString('default','EXPIRY_DATE_TYPE_STATUS')}" width="{fieldWidth}" 
								selected="true" selected.edit="{dataGrid.selectedItem.expiry_date_type_status==1?true:false}" visible="true" enabled="false" enabled.edit="true" enabled.create="true" />
				</s:HGroup>
				
				<s:Spacer width="{spaceWidth}" />
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="" verticalAlign="middle"/>
					<s:CheckBox id="expiry_date_type_reject" label="{resourceManager.getString('default','EXPIRY_DATE_TYPE_REJECT')}" width="{fieldWidth}" 
								selected="true" selected.edit="{dataGrid.selectedItem.expiry_date_type_reject==1?true:false}" visible="true" enabled="false" enabled.edit="true" enabled.create="true" />
				</s:HGroup>
				
			</s:HGroup>
			
			<s:Spacer height="{this.spaceHeight}" />
			
			<s:HGroup>
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="{resourceManager.getString('default','EXPIRY_DATE_TYPE_DEFVALUE')}" verticalAlign="middle"/>
					<components:DKI_DateTime id="expiry_date_type_defvalue" 
											 selectedDate="{convertDateToLocaleLong(dataGrid.selectedItem.expiry_date_type_defvalue)}" enabled="true" 
											 selectedDate.create="{this.getDefaultDate()}" enabled.create="true" 
											 width="{fieldWidth}" height="{fieldHeight}" timeEnabled="{this.expiry_date_type_timeflag.selected}" enableNull="true"
											 />
				</s:HGroup>
				
				<s:Spacer width="{spaceWidth}" />
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="{resourceManager.getString('default','EXPIRY_DATE_TYPE_FORMAT')}" verticalAlign="middle"/>
					<components:DKI_ValidatorInput id="expiry_date_type_format" maxChars="32" 
												   width="{fieldWidth}" height="{fieldHeight}" 
												   text="{dataGrid.selectedItem.expiry_date_type_format}" editable="false" enabled="false" editable.edit="true" enabled.edit="true"  
												   text.create="" editable.create="true" enabled.create="true" 
												   required="false" validationType="document" validationGroup="{vg}" automationName="{resourceManager.getString('default','EXPIRY_DATE_TYPE_FORMAT')}" 
												   />
				</s:HGroup>
						
				         
							
				
				<s:Spacer width="{spaceWidth}" />
				
				<s:HGroup>
					<s:Label width="{labelWidth}" height="{labelHeight}" text="" verticalAlign="middle"/>
					<s:CheckBox id="expiry_date_type_timeflag" label="{resourceManager.getString('default','EXPIRY_DATE_TYPE_TIMEFLAG')}" width="{fieldWidth}" 
								selected="true" selected.edit="{dataGrid.selectedItem.expiry_date_type_timeflag==1?true:false}" visible="true" enabled="false" enabled.edit="true" enabled.create="true" change="timeflagHandler()" />
				</s:HGroup>
				
			</s:HGroup>
			
		</s:VGroup>
		
		<s:Spacer height="10" />
		
		<s:HGroup width="100%" paddingBottom="4" paddingTop="0" gap="5">
			<s:Label  height="{labelHeight}" text="{resourceManager.getString('default','EXPIRY_DATE_TYPE_RECNUM')}: {dataGrid.selectedItem.expiry_date_type_recnum}" 
					  fontWeight="bold" color="{dataGrid.selectedItem.expiry_date_type_recnum==0?0x008800:0x880000}" verticalAlign="middle"/>
			<s:Spacer width="100%"/>
			<components:DKI_Button id="btn_delete" label="{resourceManager.getString('default','DELETE')}" height="100%" click="doDelete()" includeIn="edit" enabled="{this.canDelete &amp;&amp; (!this.isExpiryDateTypeDefault) &amp;&amp; (this.isExpiryDateTypeNotUsed)}" type="delete"/>
			<components:DKI_Button id="btn_save" label.create="{resourceManager.getString('default','SAVE')}" label="{resourceManager.getString('default','UPDATE')}" height="100%" includeIn="edit,create" enabled.create="{this.canCreate}" enabled="{this.canUpdate}" type.create="create" type="edit"/>
			<components:DKI_Button id="btn_cancel" label="{resourceManager.getString('default','CANCEL')}" height="100%" click="cancel_clickHandler()" enabled="true" type="cancel"/>
		</s:HGroup>
	</s:Panel>
	
</s:VGroup>
