<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009" blendMode="normal" mouseEnabled="false" 
			 width="100%" height="100%">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Panel")]
		]]>
	</fx:Metadata> 
	
	<fx:Script fb:purpose="styling">
		<![CDATA[
			import mx.core.FlexVersion;
			import mx.events.CloseEvent;
			[Bindable][Embed(source="/assets/skinning/dialog.jpg")] private var dialog:Class;
			[Bindable][Embed(source="/assets/skinning/dialog_lite.jpg")]  private var dialog_lite:Class;
			static private const exclusions:Array = ["background", "titleDisplay", "contentGroup", "controlBarGroup", "border"];
			
			static private const exclusions_4_0:Array = ["background", "titleDisplay", "contentGroup", "controlBarGroup"];
			
			override public function get colorizeExclusions():Array 
			{
				return exclusions;
			}
			
			override protected function initializationComplete():void
			{
				useChromeColor = true;
				super.initializationComplete();
			}
			
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
			{
				
				super.updateDisplayList(unscaledWidth, unscaledHeight);
			}
			
			private function setPartCornerRadii(target:Rect, includeBottom:Boolean):void
			{            
				target.topLeftRadiusX = cornerRadius;
				target.topRightRadiusX = cornerRadius;
				target.bottomLeftRadiusX = includeBottom ? cornerRadius : 0;
				target.bottomRightRadiusX = includeBottom ? cornerRadius : 0;
			}
			
			private var cornerRadius:Number;
			
			protected function titleDisplay_clickHandler(event:MouseEvent):void
			{
				this.dispatchEvent(new CloseEvent(CloseEvent.CLOSE,true, false));
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:GlowFilter id="glow" inner="true" color="0x224466" strength="1.4" blurX="8" blurY="8"/>
		<s:DropShadowFilter id="drop" alpha="0.95" angle="60" blurX="10" blurY="10" color="0x000055" distance="5"/> 
	</fx:Declarations>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
		<s:State name="normalWithControlBar" stateGroups="withControls" />
		<s:State name="disabledWithControlBar" stateGroups="withControls" />
	</s:states>
	
	
	<s:Group left="1" top="1" right="1" bottom="1" id="topGroupMask">
		<s:Rect id="topMaskRect" left="0" top="0" right="0" bottom="0"
				topLeftRadiusX="10" topLeftRadiusY="10" topRightRadiusX="10" topRightRadiusY="10" 
				bottomLeftRadiusX="10" bottomLeftRadiusY="10" bottomRightRadiusX="10" bottomRightRadiusY="10">
			<s:fill>
				<s:SolidColor alpha="1" color="0x000000"/>
			</s:fill>
		</s:Rect>
	</s:Group>	
	<s:Image left="0" right="0" top="0" bottom="0" fillMode="scale" mask="{topGroupMask}"
			 scaleMode="stretch" source="{global.OMLITE? new dialog_lite as Bitmap : new dialog as Bitmap}" filters="{drop}"
			 smoothingQuality="default" smooth="true"/>
	<s:Rect left="8" top="28" right="8" bottom="9" filters="{glow}" radiusX="8" radiusY="8">
		<s:stroke>
			<s:SolidColorStroke weight="3" color="0xFFFFFF"/>
		</s:stroke>
		<!--<s:fill>
			<s:SolidColor alpha="0.95" color="0xFFFFFF"/>
		</s:fill>-->
	</s:Rect>
	<s:HGroup width="100%" paddingLeft="8" paddingRight="10" paddingTop="2"
			  paddingLeft.normal="12" paddingRight.normal="8" paddingTop.normal="3">
		<s:Label id="titleDisplay" width="100%" height="26" fontWeight="bold"
				 maxDisplayedLines="1" textAlign="start" verticalAlign="middle"/>
		<s:Group height="100%">
			<s:Button width="14" height="14" click="titleDisplay_clickHandler(event)"
					  skinClass="spark.skins.spark.TitleWindowCloseButtonSkin"
					  horizontalCenter="4" verticalCenter="0"/>
		</s:Group>
	</s:HGroup>	
	<s:Group id="contentGroup" left="14" right="14" top="34" bottom="14" minWidth="0" minHeight="0" clipAndEnableScrolling="true"/>
</s:SparkSkin>
