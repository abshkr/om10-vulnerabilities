<?xml version="1.0" encoding="utf-8"?>
<s:GridItemEditor xmlns:fx="http://ns.adobe.com/mxml/2009" 
				  xmlns:s="library://ns.adobe.com/flex/spark" 
				  xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Script>
		<![CDATA[
			import spark.events.TextOperationEvent;
			import events.ObjEvent;
			
			override public function set value(newValue:Object):void 
			{	
				
				ti.text=newValue as String;
			}
			
			override public function get value():Object 
			{	
				return ti.text;
			}
			
			override public function setFocus():void 
			{
				ti.setFocus();
			}
			
			protected function ti_changeHandler(event:TextOperationEvent):void
			{
				// TODO Auto-generated method stub
/* 				if ( column.dataField == "CLOSE_STD_TOT_RND" )
				{
					data["CLOSE_STD_TOT"] = data["CLOSE_STD_TOT_RND"];
				}
				if ( column.dataField == "CLOSE_MASS_TOT_RND" )
				{
					data["CLOSE_MASS_TOT"] = data["CLOSE_MASS_TOT_RND"];
				}
 */				
				
				
				data[column.dataField] = ti.text;
		
				this.dispatchEvent(new ObjEvent("GRID_NUMBER_HAS_CHANGED", true, false, {cln:column.dataField}));
			}
			
		]]>
	</fx:Script>
	<s:TextInput id="ti" borderVisible="false" width="100%" height="100%" restrict="0-9" top="1" left="1" bottom="1" right="1" change="ti_changeHandler(event)"/>
</s:GridItemEditor>