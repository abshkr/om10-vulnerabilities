<!--- The default skin class for the thumb of a Spark VScrollBar component.  

@see spark.components.VScrollBar

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata> 
	
	<fx:Script fb:purpose="styling">
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor = true;
			super.initializationComplete();
		}
	</fx:Script>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	
	<!-- background -->
	<s:Rect left="0" top="1" right="0" bottom="1" minWidth="10" minHeight="14" radiusX="6">
		<s:stroke>
			<s:SolidColorStroke color="0x5C5C5C" weight="1"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor color="0xFFFFFF" />
		</s:fill>
	</s:Rect>
	
	<!-- fill -->
	<s:Rect left="1" top="2" right="1" bottom="1" radiusX="6">
		<s:fill>
			<s:LinearGradient rotation="60">
				<s:GradientEntry color="{global.color1_normal}" 
								 color.over="{global.color1_normal}" 
								 color.down="{global.color1_down}" />
				<s:GradientEntry color="{global.color2_normal}" 
								 color.over="{global.color2_over}" 
								 color.down="{global.color2_down}" />		
				<s:GradientEntry color="{global.color1_normal}" 
								 color.over="{global.color1_normal}" 
								 color.down="{global.color1_down}" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- highlight 
	<s:Rect left="1" top="2" bottom="3" width="6">
		<s:fill>
			<s:SolidColor color="0xFFFFFF"
						  alpha="0.75"
						  alpha.over="0.33"
						  alpha.down="0.33" />
		</s:fill>
	</s:Rect>
	-->
	<!-- layer 4: fill highlight -->
	<!--- @private -->
	<s:Rect id="highlight" left="1" right="1" top="1" bottom="2" radiusX="6">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF"
								 alpha="0.33" 
								 alpha.over="0.22" 
								 alpha.down="0.12"/>
				<s:GradientEntry color="0xFFFFFF"
								 alpha="0.33"
								 alpha.over="0.22"
								 alpha.down="0.12" />
				<s:GradientEntry color="0xFFFFFF"
								 alpha="0.33"
								 alpha.over="0.22"
								 alpha.down="0.12" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>	
	
	<!-- inside stroke -->
	<s:Rect left="1" top="2" right="1" bottom="3" radiusX="6">
		<s:stroke>
			<s:LinearGradientStroke rotation="90" weight="1">
				<s:GradientEntry color="0xFFFFFF" 
								 alpha="1"
								 alpha.over="0.55"
								 alpha.down="0.12" />
				<s:GradientEntry color="0xFFFFFF" 
								 alpha="0.22" 
								 alpha.over="0.121" 
								 alpha.down="0.0264" />
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>
	
</s:SparkSkin>
