<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:flexiframe="com.google.code.flexiframe.*"
		  xmlns:views="views.*"
		  implements="IModuleInterface"
		  width="100%" height="100%" >

	<s:states>
		<s:State name="widget"/>
		<s:State name="normal"/>
	</s:states>

	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			[Bindable] private var _url:String;
			
			private var callback:Function;
			
			public var frme:Object=null;
			
			public function setCallback(func:Function): void
			{
				callback = func;
			}
			
			public function setState(value:String): void
			{
				view.currentState = value;
			}
			
			public function setSize(w:int, h:int): void
			{
				//this.height=h;
				//this.width=w;
			}
			
			public function setSecurity(isRead:Boolean=true, isUpdate:Boolean=false, isCreate:Boolean=false, isDelete:Boolean=false, isPassword:Boolean=false): void
			{
				view.readOnly = isRead;
				view.canUpdate = isUpdate;
				view.canCreate = isCreate;
				view.canDelete = isDelete;
				view.hasPassword = isPassword;
			}
			
			protected function view_creationCompleteHandler(event:FlexEvent):void
			{
				if (callback != null) callback();
			}
			
		]]>
	</fx:Script>
	<views:v_BaseProducts id="view" creationComplete="view_creationCompleteHandler(event)"/>
</s:Module>
