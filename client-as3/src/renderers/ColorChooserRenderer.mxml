<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="components.*" clipAndEnableScrolling="true">
	
	<fx:Script>
		<![CDATA[
			protected var strColor:String="0xffffff";
			override public function prepare(hasBeenRecycled:Boolean):void {
				if (data != null)
				{
					if ( column.dataField == "prod_textcolor2" )
					{
						strColor = data['prod_textcolor'];
					}
					if ( column.dataField == "prod_backcolor2" )
					{
						strColor = data['prod_backcolor'];
					}
				}
				
				
				//lblData.text = data[column.dataField]
			}
		]]>
	</fx:Script>
	
	
	<components:ColorChooser id="cc" selectedColor="{strColor}" width="100%" height="24" enabled="false"/>
	
</s:GridItemRenderer>
