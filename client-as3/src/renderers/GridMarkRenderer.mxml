<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" clipAndEnableScrolling="true">
	
	<fx:Script>
		<![CDATA[
			import mx.core.BitmapAsset;
			[Embed (source="/assets/icons/create.png")]
			[Bindable]
			public var typeCreate:Class;
			
			[Embed (source="/assets/icons/edit1.png")]
			[Bindable]
			public var typeEdit:Class;
			
			[Embed (source="/assets/icons/delete.png")]
			[Bindable]
			public var typeDelete:Class;
			
			[Embed (source="/assets/icons/blank.png")]
			[Bindable]
			public var blank:Class;
			
			private var typeCreateObject:BitmapAsset = new typeCreate() as BitmapAsset;
			private var typeEditObject:BitmapAsset = new typeEdit() as BitmapAsset;
			private var typeDeleteObject:BitmapAsset = new typeDelete() as BitmapAsset;
			private var blankObject:BitmapAsset = new blank() as BitmapAsset;
			
			override public function prepare(hasBeenRecycled:Boolean):void 
			{
				img.source=blankObject;
				if (data)
				{
					var s:String = "";
					if( column.labelFunction != null ) 
					{
						s = column.labelFunction( data, column );
						if ( s == null )
						{
							s = "";
						}
					}
					else
					{
						if (data[column.dataField] != null)
						{
							s = data[column.dataField] as String;
						}
						else
						{
							s = "";
						}
					}
					
					//s = s.toUpperCase();
					if ( s == '+' ) img.source = typeCreateObject;
					else if ( s == '-' ) img.source = typeDeleteObject;
					else if ( s == '*' ) img.source = typeEditObject;
					else img.source = blankObject;
				}
			}
		]]>
	</fx:Script>
	
	<s:Group width="100%" height="100%" mouseEnabledWhereTransparent="true">
		<s:Image id="img" verticalCenter="0" horizontalCenter="0"/>
	</s:Group>
	
</s:GridItemRenderer>
