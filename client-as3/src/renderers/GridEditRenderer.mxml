<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" clipAndEnableScrolling="true">
	
	<fx:Script>
		<![CDATA[
			import spark.events.TextOperationEvent;
			[Bindable] private var inp:String='';
			
			override public function prepare(hasBeenRecycled:Boolean):void {
				if(data) inp = data[column.dataField];
			}
			
			protected function val_changeHandler(event:TextOperationEvent):void
			{
				data[column.dataField] = val.text;
				
			}
			
		]]>
	</fx:Script>
	<s:HGroup width="100%" height="100%" gap="2">
		<s:Group width="{height}" height="100%">
			<s:Image source="{glyph.input_number}" verticalCenter="0"/>
		</s:Group>
		<s:TextInput id="val" borderVisible="false" text="{inp}" width="100%" height="100%" change="val_changeHandler(event)"/>
	</s:HGroup>
</s:GridItemRenderer>
