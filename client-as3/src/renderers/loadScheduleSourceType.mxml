<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" clipAndEnableScrolling="true">
	
	<fx:Script>
		<![CDATA[
			[Embed (source="/assets/icons/sapgrn.png")] private var sapgrn:Class;
			[Embed (source="/assets/icons/sapred.png")] private var sapred:Class;
			[Embed (source="/assets/icons/sapyel.png")] private var sapyel:Class;
			[Embed (source="/assets/icons/sapblu.png")] private var sapblu:Class;
			[Embed (source="/assets/icons/sappin.png")] private var sappin:Class;
			[Embed (source="/assets/icons/sapgry.png")] private var sapgry:Class;
			[Bindable]public var img:Bitmap;
			[Bindable]public var tt:String; 
			
			
			/*
			
			1.       Extend the enum value for field SHLS_SRCTYPE in table SCHEDULE.
				0 – invalid   (NULL value in table will be treated as 0 as well.)
				1 – manual from local (i.e. via frontend)
				2 – auto from host (i.e. via hostcomm)
				3 – open order  (schedule generated from open order)
				4 – system (schedule generated from Standalone or from Special order)
			
			2.       Frontend: Source column in Load Schedule screen need to change from 3 lights to 5 lights.
				Prompt:  
				Light 1) Received from Host			(value of 2)
				Light 2) Created manually			(value of 1)
				Light 3) Created from Open Order	(value of 3)
				Light 4) System						(value of 4)
				Light 5) Unknown source				(value of 0 or NULL)
			
			*/
			override public function prepare(hasBeenRecycled:Boolean):void {
				if(data){
					if(data[column.dataField])
						switch(int(data[column.dataField])){
							case 0:img = new sapred();tt = resourceManager.getString('default','global.options.tripsource.unknown');break;
							case 1:img = new sapyel();tt = resourceManager.getString('default','global.options.tripsource.manual');break;
							case 2:img = new sapgrn();tt = resourceManager.getString('default','global.options.tripsource.host');break;
							case 3:img = new sapblu();tt = resourceManager.getString('default','global.options.tripsource.order');break;
							case 4:img = new sappin();tt = resourceManager.getString('default','global.options.tripsource.system');break;
							default: img = new sapred();tt = resourceManager.getString('default','global.options.tripsource.unknown');break;
						}
				}
			}
		]]>
	</fx:Script>
	
	<s:Image verticalCenter="0" horizontalCenter="0" height="12" width="60" source="{img}" toolTip="{tt}" verticalAlign="middle" horizontalAlign="center" scaleMode="zoom" smooth="true"/>
</s:GridItemRenderer>
