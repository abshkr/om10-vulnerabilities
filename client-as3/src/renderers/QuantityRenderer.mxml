<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" clipAndEnableScrolling="true">
	
	<fx:Script>
		<![CDATA[
			override public function prepare(hasBeenRecycled:Boolean):void {
				lblData.text="/";
				if ( data == null )
				{
					lblUsed.text="";
					lblAvail.text="";
				}
				else
				{
					if ( column.dataField == "oitem_delv_qty" )
					{
						lblUsed.text = data[column.dataField];
						if ( data.hasOwnProperty("oitem_prod_qty") )
						{
							lblAvail.text = String(Number(data["oitem_prod_qty"]) - Number(data[column.dataField]));
						}
						else
						{
							lblAvail.text = "";
						}
					}
					else
					{
						lblAvail.text = data[column.dataField];
						if ( data.hasOwnProperty("oitem_prod_qty") )
						{
							lblUsed.text = String(Number(data["oitem_prod_qty"]) - Number(data[column.dataField]));
						}
						else
						{
							lblUsed.text = "";
						}
					}
				}
			}
		]]>
	</fx:Script>
	
	<s:HGroup top="9" left="7">
		<s:Label id="lblUsed" color="0xFF0000"/>
		<s:Label id="lblData" color="0x000000" fontWeight="bold"/>
		<s:Label id="lblAvail" color="0x008800"/>
	</s:HGroup>
	
</s:GridItemRenderer>
