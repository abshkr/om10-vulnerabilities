<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="190" height="125" minHeight="100" skinClass="skins.DialogBoxSkin"
		 title="Confirm Password" xmlns:components="components.*">
	<fx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
			
			public var canceled:Boolean=false;
			
			protected function closeHandler(event:MouseEvent):void
			{
				this.dispatchEvent(new CloseEvent(CloseEvent.CLOSE,true, false));
			}
			
			protected function userPassword_keyUpHandler(event:KeyboardEvent):void
			{
				if (event.charCode == 13) closeHandler(null);
			}
			
		]]>
	</fx:Script>
	<s:TextInput id="userPassword" left="10" right="10" top="20" displayAsPassword="true" keyUp="userPassword_keyUpHandler(event)"/>
	<components:DKI_Button id="btn_ok" left="8" bottom="10" label="{resourceManager.getString('default','OK')}" type="ok" click="closeHandler(event)"/>	
	<components:DKI_Button id="btn_cancel" right="8" bottom="10" label="{resourceManager.getString('default','CANCEL')}" type="cancel" click="userPassword.text=''; canceled=true; closeHandler(event)"/>
</s:Panel>
