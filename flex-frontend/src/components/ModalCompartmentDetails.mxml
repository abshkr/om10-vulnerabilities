<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="components.*"  creationComplete="creationCompleteHandler(event)" 
		 width="700" height="420" skinClass="skins.DialogBoxSkin" title="Equipment Compartment Details">
	
	<fx:Script>
		<![CDATA[
			import components.MessageDialog;
			
			import events.ObjEvent;
			
			import mx.collections.ArrayCollection;
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.utils.ObjectUtil;

			
			[Bindable]public var arr:ArrayCollection = new ArrayCollection();
			[Bindable]public var nComp:String = '';
			[Bindable]public var canEdit:Boolean=false;
			public var orginal_arr:ArrayCollection = new ArrayCollection();
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				orginal_arr = new ArrayCollection();
				for each(var x:Object in arr)
				{
					this.orginal_arr.addItem(ObjectUtil.copy(x));
				}
			}
			
//			protected function closeWindow(event:MouseEvent):void
			protected function closeWindow():void
			{
				var value_error:Boolean;
				
				value_error = false;
				for each(var x:Object in arr){
					trace (x.adj_capacity,x.adj_safefill );
					if ( Number(x.adj_capacity) < Number(x.adj_safefill) )
					{
						value_error = true;
						break;
					}
				}
				
				trace ("cmpt::", arr.length, value_error);
				if ( value_error == true )
				{
					var errorBox:MessageDialog = new MessageDialog( resourceManager.getString('default','ALERT__EQPT_CMPT_QTY_ERROR') );
				}
				else
				{
					PopUpManager.removePopUp(this);
				}
			}			
			
			protected function cancelWindow(event:MouseEvent):void
			{
				var count:int;
				var i:int;
				
				count = arr.length;
				for (i=0; i<count; i++)
				{
					arr[i].adj_capacity = orginal_arr[i].adj_capacity;
					arr[i].adj_safefill = orginal_arr[i].adj_safefill;
				}
				
				PopUpManager.removePopUp(this);
			}			
			
		]]>
	</fx:Script>	
	<fx:Declarations>
		<components:ValidationGroup id="vg" action="{closeWindow}" defaultButton="{cmpt_ok}" parentScreen="{this}"/>
	</fx:Declarations>
	
	<s:VGroup top="10" left="10" right="10" height="100%" width="100%">
		<s:HGroup>
			<s:Label height="28" fontWeight="bold" text="{resourceManager.getString('default','ETYP_CMPT_EDITOR.TOTAL_CMPTS')}" verticalAlign="middle" />
			<components:DKI_ValidatorInput width="100" id="compartments" text="{nComp}" prompt="{resourceManager.getString('default','global.lbl.required')}" editable="false" enabled="false"/>
		</s:HGroup>		
		<components:DKI_List width="100%" height="100%" contentBackgroundAlpha="0" id="compList" dataProvider="{arr}" borderVisible="false">
			<components:itemRenderer>
				<fx:Component>
					<s:ItemRenderer autoDrawBackground="false">
						<s:HGroup width="100%">
							<s:Label text="{resourceManager.getString('default','ETYP_CMPT_EDITOR.LINE_CMPT_NO')+String(itemIndex+1)+'          '}" height="28" verticalAlign="middle"/>
							<s:Spacer width="100%" />
							<s:Label text="{global.gSafefillLabel}" height="28" verticalAlign="middle"/>
							<!--components:DKI_TextInput width="120" id="adj_safefill" text="@{data.adj_safefill}" editable="{outerDocument.canEdit}" 
														    /-->
							<components:DKI_ValidatorInput width="120" id="adj_safefill" text="{data.adj_safefill}" editable="{outerDocument.canEdit}" 
														   change="{data.adj_safefill=adj_safefill.text}"
														   required="true" validationType="integer"
														   validationGroup="{ outerDocument.vg }" 
														   automationName="{resourceManager.getString('default','ETYP_CMPT_EDITOR.LINE_CMPT_NO')+String(itemIndex+1)+' '+global.gSafefillLabel}" />
							<s:Spacer width="20" />
							<s:Label text="{data.unit_title}" height="28" verticalAlign="middle"/>
							<s:Spacer width="100%" />
							<s:Label text="{global.gCapacityLabel}" height="28" verticalAlign="middle"/>
							<components:DKI_ValidatorInput width="120" id="adj_capacity" text="{data.adj_capacity}" editable="{outerDocument.canEdit}" 
														   change="{data.adj_capacity=adj_capacity.text}"
														   required="true" validationType="integer"
														   validationGroup="{outerDocument.vg}" 
														   automationName="{resourceManager.getString('default','ETYP_CMPT_EDITOR.LINE_CMPT_NO')+String(itemIndex+1)+' '+global.gCapacityLabel}" />
							<s:Spacer width="10" />
							<s:Label text="{'('+resourceManager.getString('default','UNIT__VOLUME_LITRE')+')'}" height="28" verticalAlign="middle"/>
						</s:HGroup>
					</s:ItemRenderer>
				</fx:Component>
			</components:itemRenderer>
		</components:DKI_List>
		<s:Spacer height="5" />
		<s:HGroup width="100%">
			<s:Spacer width="100%" />
			<!--components:DKI_Button id="cmpt_ok" label="{resourceManager.getString('default','OK')}" click="closeWindow(event)"/-->
			<components:DKI_Button id="cmpt_ok" label="{resourceManager.getString('default','OK')}" type="save"/>
			<components:DKI_Button id="cmpt_cancel" label="{resourceManager.getString('default','CANCEL')}" click="cancelWindow(event)" type="cancel"/>
		</s:HGroup>
		<s:Spacer height="5" />
	</s:VGroup>	
</s:Panel>
