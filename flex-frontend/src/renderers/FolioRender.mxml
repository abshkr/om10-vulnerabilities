<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<fx:Script>
		<![CDATA[
			import mx.controls.DateField;
			import flash.globalization.LocaleID;
			
			[Bindable] private var dispColor:uint = 0xFFFFFF;
			[Bindable] private var timeStamp:String;
			
			override public function set data(value:Object):void 
			{      
				super.data = value;
				switch(value.payload.STATUS)
				{
					case 0: dispColor = 0xFFFFFF;
						break;
					case 1: dispColor = 0xFFFFFF;
						break;
					case 2: dispColor = 0xFFFFFF;
						break;
					default : dispColor=0xFFFFFF;
				}
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:DateTimeFormatter id="dateFormatter" locale="{LocaleID.DEFAULT}" dateStyle="short" timeStyle="none"/>
	</fx:Declarations>
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="{dispColor}" alpha="0.8"/>
		</s:fill>
	</s:Rect>
	
	<s:HGroup width="100%" paddingTop="5" paddingBottom="3" paddingLeft="5">
		<s:Label width="50" height="100%" text="{data.payload.CLOSEOUT_NR}" verticalAlign="middle"/>
		<s:Label width="50%" height="100%" text="{data.payload.CLOSEOUT_DATE}" verticalAlign="middle"/>
		<s:Label width="50%" height="100%" text="{data.payload.PREV_CLOSEOUT_DATE}" verticalAlign="middle"/>
		<s:Label width="50" height="100%" text="{data.payload.STATUS}" verticalAlign="middle"/>
	</s:HGroup>
	<s:Line top="-1" bottom="-1" left="52">
		<s:stroke>
			<s:SolidColorStroke color="0xC8C8C8" weight="1"/>
		</s:stroke>
	</s:Line>
	<s:Line top="-1" bottom="-1" left="{this.width/2}">
		<s:stroke>
			<s:SolidColorStroke color="0xC8C8C8" weight="1"/>
		</s:stroke>
	</s:Line>
	<s:Line top="-1" bottom="-1" right="52">
		<s:stroke>
			<s:SolidColorStroke color="0xC8C8C8" weight="1"/>
		</s:stroke>
	</s:Line>
</s:ItemRenderer>
