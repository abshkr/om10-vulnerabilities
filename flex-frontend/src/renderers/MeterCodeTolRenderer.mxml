<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
					xmlns:s="library://ns.adobe.com/flex/spark"
					xmlns:mx="library://ns.adobe.com/flex/mx" clipAndEnableScrolling="true"
					xmlns:components="components.*"
					xmlns:dm="dm.*"
					>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import spark.events.IndexChangeEvent;
			import dm.utils.tools;
			
			[Bindable] public var mtrCodes:ArrayCollection;
			
			public var readOnly:Boolean = true;

			override public function prepare(hasBeenRecycled:Boolean):void
			{
				// TODO Auto-generated method stub
				//trace(owner);
				if (data)
				{
					///if (DM.ManualTransactions.curr_selected_transfer == -1) return;
					
					// The reference transfer data array could be null, user could delete all transfers by clicking 'Del Transfer' button.
					if (DM.ManualTransactions.curr_trsf_ref != null && DM.ManualTransactions.curr_trsf_ref.length == 0)
						return;
					
					// Ver2.9 Get the Drawer company code from the transaction level, which has been initialized when Trip No or Tanker changed.
					// Since the Base total and Meter total have nothing to do with current selected transfer, it should be displayed at transaction level. 
					var drawer_cd: String = DM.ManualTransactions.trans_drawer_cmpy;
					
//					var oTmp:Object = DM.ManualTransactions.curr_trsf_ref.getItemAt(DM.ManualTransactions.curr_selected_transfer);
//					trace(" ");
//					trace("MeterCodeRender ====> prepare");
//					trace("Drawer Code ->"+oTmp.curr_trsf_drwr_cd);
//					trace("Drawer Prod Code ->"+oTmp.curr_trsf_drwr_prod_cd);
//					trace("Arm Code ->"+oTmp.curr_trsf_arm_cd);
					mtrCodes = new ArrayCollection();
					for each (var obj:Object in DM.ManualTransactions.metercodes)
					{
						// Drawer (no need + Drawer Product + Arm) ==> Meter
						// Select all the meters which belong to the Drawer as a meter container.
						if (obj.RAT_PROD_PRODCMPY == /*Ver2.9 oTmp.curr_trsf_drwr_cd*/ drawer_cd
						 /*&& obj.RAT_PROD_PRODCODE == oTmp.curr_trsf_drwr_prod_cd*/
						 /*&& obj.STREAM_ARMCODE    == oTmp.curr_trsf_arm_cd*/)
						{
							// Only add the meters belong to this company+product+arm.
							var found:int = 0;
							for each (var o:Object in mtrCodes)
							{
								if (obj.STREAM_MTRCODE == o.STREAM_MTRCODE)
								{
									found = 1;
									break;
								}
							}
							if (!found)
							{
								mtrCodes.addItem(obj);
							}
						}
					}
					
					var idx:int = -1;
					if (mtrCodes.length == 1)
					{
						// Only one meter available, so select it.
						listData.selectedIndex = 0;
						idx = 0;
					}
					else
					{
						var tmp:String = String(data[column.dataField]);
						var idx:int = -1;
						idx = tools.getItemIndexFromCode(tmp, mtrCodes, "STREAM_MTRCODE");
						
						if (readOnly && idx == -1)
						{
							idx = mtrCodes.length - 1;
						}
						
						listData.selectedIndex = idx;
					}
					try
					{
						listLabel.text = mtrCodes[idx].STREAM_MTRCODE;
						listLabel.setStyle("color", DM.ManualTransactions.TEXT_COLOR_BLACK);
					}
					catch(e:Error)
					{
						listLabel.text = "Select Prod & Arm";
						listLabel.setStyle("color", DM.ManualTransactions.TEXT_COLOR_RED);
					}
					
					validateMeter();
				}
			}
			
			protected function validateMeter():void
			{
				if (listData.selectedIndex != -1)
				{
					// If one meter selected, set the meter value.
					if (mtrCodes.length > 0)
						data[column.dataField] = mtrCodes.getItemAt(listData.selectedIndex).STREAM_MTRCODE;
				}
				else
				{
					// If no meter selected, clear the meter value.
					data[column.dataField] = null;
				}
			}
			
			protected function droplist_creationCompleteHandler(event:Event):void
			{
				//listData.selectedItem = data[column.dataField];
			}
			
			protected function droplist_changeHandler(event:IndexChangeEvent):void
			{
				data[column.dataField]=listData.selectedItem.STREAM_MTRCODE;
				//var parnt:DataGrid = owner as DataGrid;
				//(parnt.dataProvider as ArrayCollection).refresh();
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<dm:DM/>
	</fx:Declarations>
	<!--creationComplete="droplist_creationCompleteHandler(event)"
	selectedItem="{data[column.dataField]}"
	labelField="BAM_CODE"
	-->
	<s:DropDownList id="listData" top="0" left="0" bottom="0" right="0" includeInLayout="{!readOnly}" visible="{!readOnly}"
					dataProvider="{mtrCodes}"
					change="droplist_changeHandler(event)"
					labelField="STREAM_MTRCODE" prompt="Select Meter Code" useVirtualLayout="false"/>
	
	<s:Label id="listLabel" top="2" left="2" bottom="2" right="2" backgroundColor="#EAEAEA" verticalAlign="middle" includeInLayout="{readOnly}" visible="{readOnly}" backgroundAlpha="1"/>
	
</s:GridItemRenderer>
